package selfProgramming;

public class blockIfStatement {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//several statement can be grouped together into a block statement by braces {}
		// but still equivalent to the normal
		
		double area, radius;
		
		final double PI = 3.14159265;
		radius = 1.2;
		
		if (radius >= 0) {
			area = radius * radius * PI;
			System.out.printf("The area for the circle of the radius " + radius + " is :%.2f" , area);
			
		}
		

	}

}
